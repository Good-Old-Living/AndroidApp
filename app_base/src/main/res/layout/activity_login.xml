<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_login"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginLeft="32dp"
	android:layout_marginRight="32dp"
	android:background="#FFFFFF"
	android:layout_marginTop="@dimen/activity_vertical_margin"
	android:layout_marginBottom="@dimen/activity_vertical_margin">
	<ImageView
		android:layout_width="wrap_content"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		app:srcCompat="@drawable/logo" />
	<!-- <TextView
		android:text="Good Old Living"
		android:gravity="center"
		android:textColor="#013220"
		android:textStyle="bold"
		android:textSize="30sp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" /> -->
	<LinearLayout
		android:id="@+id/layout_send_otp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp">
			<TextView
				android:text="91"
				android:textSize="25dp"
				android:layout_marginRight="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<EditText
				android:id="@+id/text_mobile"
				android:layout_width="match_parent"
				android:textSize="25dp"
				android:hint="Mobile"
				android:layout_height="wrap_content" />
		</LinearLayout>

		<Button
			android:id="@+id/button_send_otp"
			android:text="Send OTP"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.MaterialButton"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/layout_otp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone">
		<EditText
			android:id="@+id/text_otp"
			android:layout_width="match_parent"
			android:textSize="25dp"
			android:hint="OTP"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/button_otp_login"
			android:text="Login"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.MaterialButton" />
			
		<Button
			android:id="@+id/button_resend_otp"
			android:text="Resend OTP"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.MaterialButton" />	
	</LinearLayout>
</LinearLayout>