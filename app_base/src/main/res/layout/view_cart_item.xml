<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardUseCompatPadding="true"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_weight="3"
			android:layout_marginTop="15dp"
			android:layout_height="match_parent">
			<ImageView
				android:id="@+id/product_tn_image"
				android:adjustViewBounds="true"
				android:scaleType="centerCrop"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />


		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:layout_marginBottom="@dimen/activity_vertical_margin"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/product_name"
				android:theme="@style/AppTheme.ProductNameText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/product_price"
					android:layout_marginRight="8dp"
					android:theme="@style/AppTheme.ProductPriceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/product_mrp"
					android:layout_marginRight="8dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/product_discount"
					android:layout_marginLeft="8dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:id="@+id/layout_quantity_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="2">
					<Button
						android:id="@+id/button_quantity_minus"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:theme="@style/AppTheme.QtyRemoveButton"
						android:text="-" />
					<EditText
						android:layout_marginLeft="@dimen/activity_horizontal_margin"
						android:layout_marginRight="@dimen/activity_horizontal_margin"
						android:id="@+id/product_quantity"
						android:text=""
						android:layout_gravity="center"
						android:gravity="center"
						android:layout_width="30dp"
						android:layout_height="wrap_content" />
					<Button
						android:id="@+id/button_quantity_add"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:theme="@style/AppTheme.QtyAddButton"
						android:paddingBottom="5dp"
						android:text="+" />
					/>
				</LinearLayout>
				<TextView
					android:id="@+id/text_total_item_price"
					android:layout_marginRight="2dp"
					android:paddingTop="10dp"
					android:gravity="right"
					android:layout_gravity="right"
					android:layout_weight="1"
					android:theme="@style/AppTheme.ProductPriceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</LinearLayout>
			<TextView
				android:id="@+id/text_item_remove"
				android:text="Remove"
				android:layout_marginTop="8dp"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:theme="@style/AppTheme.Link" />

		</LinearLayout>


	</LinearLayout>

</LinearLayout>